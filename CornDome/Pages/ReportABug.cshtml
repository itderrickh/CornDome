@page
@model CornDome.Pages.ReportABugModel
@{
    ViewData["Title"] = "Report a Bug";
}

<h2>Report a Bug</h2>

<form method="post" class="mt-3">

    <div class="mb-3">
        <label class="form-label">Title</label>
        <input asp-for="Bug.Title" class="form-control" />
        <span asp-validation-for="Bug.Title" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">What happened?</label>
        <textarea asp-for="Bug.Description"
                  class="form-control"
                  rows="5"></textarea>
        <span asp-validation-for="Bug.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">
            Steps to reproduce (optional)
        </label>
        <textarea asp-for="Bug.Steps"
                  class="form-control"
                  rows="4"></textarea>
    </div>

    <button class="btn btn-primary">
        Submit Bug
    </button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}