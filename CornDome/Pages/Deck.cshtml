@page
@model CornDome.Pages.DeckModel
@{
    ViewData["Title"] = "Deck";
}

@if (Model.QueryDeck != null)
{
    <div style="display: flex;">
        @if (Model.QueryDeck.Hero != null)
        {
            <div style="width: 20%;">
                <img style="width: 100%;" alt="@Model.QueryDeck.Hero.Name" src="@("/CardImages/" + Model.QueryDeck.Hero.ImageUrl)" />
            </div>
        }
        
        @foreach (var landscape in Model.QueryDeck.Landscapes)
        {
            <div style="width: 20%;">
                <img style="width: 100%;" alt="@landscape.Name" src="@("/CardImages/" + landscape.ImageUrl)" />
            </div>
        }
    </div>

    <div style="display: flex; flex-wrap: wrap;">
        @foreach (var card in Model.QueryDeck.Cards)
        {
            <div style="width: 10%;">
                <img class="deck-card-image" alt="@card.Name" style="width: 100%;" src="@("/CardImages/" + card.ImageUrl)" />
            </div>
        }
    </div>

    <div>
        <a asp-page="DeckBuilder" asp-route-deck="@(Request.Query["deck"])">Go To deck builder</a>
    </div>

    <style>
        .deck-card-image:hover {
            transform: scale(2);
            transition: transform .2s;
        }
    </style>
}
