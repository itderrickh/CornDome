@page
@model CornDome.Pages.Admin.IndexModel
@{
    ViewData["Title"] = "Admin Tools";
}

@if (Model.LoggedInUser != null)
{
    <h3>Good morning, @(Model.LoggedInUser.Username)!</h3>
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}

<div class="container my-3">
        <h2 class="mb-3">User Management</h2>
        <table class="table table-light table-striped" style="width: 100%;">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Username</th>
                    <th>Roles</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model.Users.OrderBy(x => x.Id))
                {
                    <tr>
                        <td>@user.Id</td>
                        <td>@user.Email</td>
                        <td>@user.UserName</td>
                        <td>
                            <ul>
                                <form method="post" asp-page-handler="AddRole">
                                    <input type="text" name="AddRoleUserId" value="@user.Id" style="display: none;" />
                                    <select asp-for="AddRoleId">
                                        <option value="">- Select a Role -</option>
                                        @foreach (var role in Model.Roles)
                                        {
                                            <option value="@role.Id">@role.Name</option>
                                        }
                                    </select>
                                    <button type="submit" class="btn btn-primary">Add Role</button>
                                </form>
                                @if (Model.UserRoles.Where(x => x.UserId == user.Id).Count() > 0)
                                {
                                    <hr />
                                }
                                    
                                @foreach (var userRole in Model.UserRoles.Where(x => x.UserId == user.Id))
                                {
                                    <li>
                                        @Model.Roles.SingleOrDefault(y => y.Id == userRole.RoleId).Name
                                        <form method="post" asp-page-handler="RemoveRole" style="display: inline;">
                                            <input type="text" name="AddRoleUserId" value="@userRole.UserId" style="display: none;" />
                                            <input type="text" name="AddRoleId" value="@userRole.RoleId" style="display: none;" />
                                            <button type="submit" class="btn btn-primary">Delete</button>
                                        </form>
                                    </li>
                                }
                            </ul>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
</div>

